@model IList<BooksViewModel>;
<link rel="stylesheet" href="~/css/bookList.css" asp-append-version="true" />

 <form asp-controller="Home" class="registartion-form" asp-action="search" method="post">
    <input type="text" name="search" id="search" placeholder="Search" pattern="[^'\x22]+" />
 </form>

<div class="nav-link text-dark">
    
@*</div>
<div class="nav-link text-dark">*@
    
</div>

<div style="overflow-y:scroll; max-height:400px">
<table class="dd">
        <thead>
            <tr>
            <td>
                ISBN    <a asp-action="sortByISBN" asp-controller="Home">sort</a> </td>
            <td>Name    <a asp-action="sortByName" asp-controller="Home">sort</a></td>
                <td>Author</td>
                <td>Release Year</td>
                <td>Genre</td>
                <td>Publication</td>
                <td>price</td>
                <td> edit</td>
                <td>delete</td>
            </tr>
        </thead>
        @*for each use and show books*@
       @foreach(BooksViewModel i in Model){
           <tr>
               <td>@i.ISBN</td>
               <td> @i.BookName </td>
               <td> @i.Author</td>
               <td>@i.ReleaseYear</td>
               <td>@i.Genre</td>
               <td>@i.Publication</td>
               <td>@i.price</td>
           <td>
                <a class="nav-link text-dark" id="bt1" asp-area="" asp-controller="Home" asp-action="EditPage" asp-route-bookId="@i.BookId">Edit</a>
                
           </td>
           <td>
                <a class="nav-link text-dark" id="bt2" asp-area="" asp-controller="Home" asp-action="Delete" asp-route-book="@i.BookId" asp-route-author="@i.authorID"> Delete </a>
           </td>
          </tr>
        }
</table>
</div>

        <div style="align-self :center"  >
    <a class="nav-link text-dark" id="bt3" asp-area="" asp-controller="Home" asp-action="NewBook">Add New book</a>
        </div>
